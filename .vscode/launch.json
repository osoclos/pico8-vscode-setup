{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch PICO-8 Cartridge",
            "type": "cppdbg",

            "request": "launch",

            "program": "C:/Windows/System32/WindowsPowerShell/v1.0/powershell.exe",
            "args": [
                "-NoProfile",

                "-ExecutionPolicy",
                "Bypass",

                "-File",
                "${workspaceFolder}/.vscode/pico-8-launch.ps1"
            ],

            "environment": [
                // The path of the entry .lua file relative to your workspace folder (the folder housing the `.vscode` folder).
                {
                    "name": "ENTRY_FILE_PATH",
                    "value": "hello.lua"
                },

                // The path of the .p8 cartridge file relative to your workspace folder.
                {
                    "name": "ENTRY_CART_PATH",
                    "value": "hello.p8"
                },

                // The absolute path to the PICO-8 executable (the folder which was extracted from the .zip file and contains the PICO-8 executable).
                {
                    "name": "PICO8_EXE_PATH",
                    "value": ""
                },

                // The list of arguments to pass into PICO-8
                {
                    "name": "PICO8_ARGS",
                    "value": "-run $ENTRY_CART_PATH"
                }
            ],

            "cwd": "${workspaceFolder}",
            "externalConsole": false,
        }
    ]
}

{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch PICO-8 Cartridge",
            "type": "node",

            "request": "launch",

            "program": "${workspaceFolder}/.vscode/pico-8-launch.mjs",
            "cwd": "${workspaceFolder}",

            "env": {
                "ENTRY_FILE_PATH": "hello.lua", // The path of the entry .lua file relative to your workspace folder (the folder housing the `.vscode` folder).
                "ENTRY_CART_PATH": "hello.p8", // The path of the .p8 cartridge file relative to your workspace folder.

                "PICO8_EXE_PATH": "", // The absolute path to the PICO-8 executable (the folder which was extracted from the .zip file and contains the PICO-8 executable).

                "PICO8_ARGS": "-run $ENTRY_CART_PATH" // The list of arguments to pass into PICO-8
            },

            "postDebugTask": "patch-exported-files",
            "console": "integratedTerminal"
        }
    ]
}
